---
import RootLayout from "@const/RootLayout.astro";
import SeoHeader from "@const/SeoHeader.astro";

const seoProps = {
  title: "YellowBaba - Professional Web Development Insights & Tutorials",
  description: "Expert web development tutorials and insights for modern developers. Learn JavaScript, React, Node.js, and more with practical, industry-focused guides.",
  url: "https://yellowbaba.tech",
  image: "/og-image.jpg",
  author: "YellowBaba",
  keywords: [
    "web development",
    "professional tutorials",
    "javascript",
    "react",
    "nodejs",
    "software engineering"
  ]
};
---

<RootLayout>
  <SeoHeader {...seoProps} />
  
  <!-- Hero Section -->
  <section class="min-h-screen flex items-center justify-center relative overflow-hidden">
    <div class="container mx-auto px-4 py-16 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h1 
          class="text-4xl sm:text-5xl md:text-6xl font-bold text-gray-900 dark:text-white mb-6 
                 opacity-0 animate-fade-in"
        >
          Mastering Modern
          <span class="bg-gradient-to-r from-blue-600 to-purple-600 dark:from-blue-400 dark:to-purple-400 text-transparent bg-clip-text">
            Web Development
          </span>
        </h1>
        <p 
          class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 mb-12 
                 opacity-0 animate-fade-in animation-delay-200"
        >
          Professional tutorials and insights to elevate your development skills.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center
                    opacity-0 animate-fade-in animation-delay-400">
          <a 
            href="/tutorials" 
            class="px-8 py-3 rounded-lg bg-blue-600 text-white font-medium
                   hover:bg-blue-700 transform hover:scale-105 transition-all
                   dark:bg-blue-500 dark:hover:bg-blue-600"
          >
            Explore Tutorials
          </a>
          <a 
            href="/about" 
            class="px-8 py-3 rounded-lg bg-gray-100 text-gray-900 font-medium
                   hover:bg-gray-200 transform hover:scale-105 transition-all
                   dark:bg-gray-800 dark:text-white dark:hover:bg-gray-700"
          >
            About Me
          </a>
        </div>
      </div>
    </div>

    <!-- Background Gradient -->
    <div class="absolute inset-0 bg-gradient-to-br from-blue-50 to-purple-50 
                dark:from-gray-900 dark:to-gray-800 -z-10"></div>

    <!-- Animated Shapes -->
    <div class="absolute inset-0 overflow-hidden -z-5">
      <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-blue-400/10 rounded-full 
                  mix-blend-multiply filter blur-xl animate-float"></div>
      <div class="absolute top-1/3 right-1/4 w-64 h-64 bg-purple-400/10 rounded-full 
                  mix-blend-multiply filter blur-xl animate-float-delayed"></div>
    </div>
  </section>
</RootLayout>

<style>
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .animate-fade-in {
    animation: fadeIn 1s ease-out forwards;
  }

  .animation-delay-200 {
    animation-delay: 200ms;
  }

  .animation-delay-400 {
    animation-delay: 400ms;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  .animate-float-delayed {
    animation: float 6s ease-in-out 2s infinite;
  }
</style>
